{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "public/**",
          "react-editor/dist/**",
          "backend/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/react-editor/dist/assets/$1"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
